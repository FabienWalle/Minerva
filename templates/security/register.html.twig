{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="flex h-[90vh] p-2 flex-col justify-center">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <img class="mx-auto h-10 w-auto" src="{{ asset('images/owl.svg') }}" alt="Minerva">
            <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Créer un compte</h2>
        </div>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

            {% if registrationForm.vars.errors|length > 0 %}
                <div class="rounded-md bg-red-50 p-4">
                    <div class="flex">
                        <div class="ml-3">
                            {% for error in registrationForm.vars.errors %}
                                <h3 class="text-sm font-medium text-red-800">{{ error.message }}</h3>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}

            <div>
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                <div class="mt-2">
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 px-2'}}) }}
                </div>
            </div>

            <div>
                {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                <div class="mt-2">
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 px-2'}}) }}
                </div>
            </div>

            <div>
                <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                    S'inscrire
                </button>
            </div>

            {{ form_end(registrationForm) }}

            <p class="mt-10 text-center text-sm text-gray-500">
                Déjà inscrit ?
                <a href="{{ path('app_login') }}" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">Se connecter</a>
            </p>
        </div>
    </div>
{% endblock %}