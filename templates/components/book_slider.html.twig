<div class="p-4 max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold">{{ card_title }}</h2>
        {% if books|length > 0 %}
            <div class="flex gap-2">
                <button id="slider-prev-{{ slider_id }}" class="px-3 py-1 bg-blue-600 text-black rounded hover:bg-blue-700 transition">Prev</button>
                <button id="slider-next-{{ slider_id }}" class="px-3 py-1 bg-blue-600 text-black rounded hover:bg-blue-700 transition">Next</button>
            </div>
        {% endif %}
    </div>

    {% if books|length > 0 %}
        <div id="slider-{{ slider_id }}" class="flex overflow-x-auto space-x-2 w-full p-0 scrollbar-hide">
            {% for book in books %}
                {% include 'components/book_card.html.twig' with { book: book } %}
            {% endfor %}
        </div>
    {% else %}
        <p class="text-gray-500">Aucun livre disponible dans ce th√®me</p>
    {% endif %}
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const slider = document.getElementById('slider-{{ slider_id }}');
        const prev = document.getElementById('slider-prev-{{ slider_id }}');
        const next = document.getElementById('slider-next-{{ slider_id }}');

        if (slider && prev && next) {
            prev.addEventListener('click', () => {
                slider.scrollBy({ left: -200, behavior: 'smooth' });
            });

            next.addEventListener('click', () => {
                slider.scrollBy({ left: 200, behavior: 'smooth' });
            });
        }
    });
</script>