{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .scrollbar-hide::-webkit-scrollbar { display: none; }
        .scrollbar-hide { scrollbar-width: none; -ms-overflow-style: none; }
    </style>
{% endblock %}

{% block body %}
    {% for theme in themes %}
        <twig:book_slider
                sliderId="slider_{{ theme.id }}"
                cardTitle="{{ theme.name }}"
                :books="theme.books"
        />
    {% endfor %}
{% endblock %}